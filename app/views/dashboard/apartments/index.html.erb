<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">You have <%= @apartments.count %> apartments </h1>
    <%= link_to 'New apartment', new_dashboard_apartment_path, class: "btn btn-primary" %>
  </div>
    <br>
  <div id="apartments" class="min-w-full">
    <% @apartments.each do |apartment| %>
    <div class="grid grid-cols-4 gap-4 border-2 border-solid border-black mb-4">
      <div><span><strong class="inline-block font-medium mb-1">Address:</strong></span><span> <%= apartment.city %></span></div>
      <div><strong class="block font-medium mb-1">Phone:</strong></div>
      <div><strong class="block font-medium mb-1">Rooms:</strong></div>
      <div><strong class="block font-medium mb-1"> </strong></div>
      <div><%= apartment.address %></div>
      <div><%= apartment.phone %></div>
      <div><%= apartment.rooms %></div>
      <div><%= link_to "More Info", dashboard_apartment_path(apartment), class: "btn btn-success w-30 mb-1" %></div>
    </div>
    <% end %>
  </div>
</div>
