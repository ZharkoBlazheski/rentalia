<div class="container mx-auto text-center">
  <h1 class="font-bold text-5xl mt-16 mb-8 lg:mt-64 lg:mb-24 merienda-one-font">Your dream vacation spot</h1>
  <%= form_with url: '/search', method: :get do |f| %>
    <div class="flex flex-col md:flex-row justify-center mb-8">
      <span class="mx-8">
        <%= f.text_field :start_date,
          data: {
            controller: "flatpickr",
            flatpickr_min_date: Time.zone.now + 1.days,
            flatpickr_max_date: Time.zone.now + 30.days
          },
          class: "hidden"
          %>
      </span>
      <span class="mx-8">
        <%= f.text_field :end_date,
          data: {
            controller: "flatpickr",
            flatpickr_min_date: Time.zone.now + 2.days,
            flatpickr_max_date: Time.zone.now + 30.days
          },
          class: "hidden"
          %>
      </span>
    </div>
    <%= f.submit "Pick Date", class: "self-center px-8 py-3 font-semibold rounded bg-blue-500 dark:bg-blue-400 dark:text-gray-900" %>
  <% end %>
</div>
